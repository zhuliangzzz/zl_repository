sub get_jobslist
{
	my $dbname = "incam_management";
	my $location = "192.168.2.19";
	my $port = "3306"; 
	my $database = "DBI:mysql:$dbname:$location:$port";
	my $db_user = "root";
	my $db_pass = "k06931!";
	my $dbh = DBI->connect($database,$db_user,$db_pass);
	my $sth;
	
	# my $sql = "SELECT job FROM abnormal_jobs";
	 my $sql = "SELECT JOB, `Backup Path` FROM abnormal_jobs";
	
	$sth = $dbh->prepare($sql);
	$sth->execute() or die "无法执行SQL语句:$dbh->errstr"; 
	
    while ( my @recs=$sth->fetchrow_array)
    {
    
        # add filter /data3 #
        if  ( $recs[1] =~ /\/data3.*/ ) {
        push ( @jobs_list, $recs[0] );
        push ( @bak_path, $recs[1]);
        }
    }
    
	$sth->finish;
	$dbh->disconnect;
}

sub checkJobExist
{
	my $job = shift;
	$f->INFO(angle_direction => 'ccw', entity_type => 'job', entity_path => "$job", data_type => 'EXISTS');
	if ( $f->{doinfo}{gEXISTS} eq 'yes' )
	{
		$mw3_1->messageBox(-icon => 'error',-message => 'Job已存在,导入失败.',-title => 'Error',-type => 'Yes');
		return 1;
	}
	return 0;
}

sub update_input_frm {
	$job_name = "";
	$input_name->configure(-fg => 'black');
}

sub jobfilter {
	my $inputName = $input_name -> get;
	
	$sel_job_lb -> delete("0","end");
	
	$inputName =~ s/\*/\.\*/g;
	
	$inputName =~ s/\+/\\+/g;

	foreach ( @jobs_list )
	{
		if ( $_ =~ m/\A.*$inputName.*\Z/ )
		{
			$sel_job_lb -> insert('end',$_);		
		}
	}
	
}

sub ftpJob
{
	my $ftpJob = shift;
	my $localPath = shift;
	
	# my $ftpHost = "192.168.2.19";
	my $ftpHost = "172.20.218.191";
	my $ftp = Net::FTP -> new ( $ftpHost, Debug => 0, Timeout => 10, Passive => 1 ) or die "Cannot connect to ibm6: $! ";
	
	$ftp -> login("Incam","incam")  or die "Cannot login ", $ftp -> message;
	$ftp -> cwd("/data3/db_management/abnormal_jobs/") or die "Cannot change working directory ", $ftp -> message;
	
	$ftp -> binary();
	$ftp -> get("$ftpJob","$localPath/$ftpJob") or die "get failed ", $ftp -> message;
	
	$ftp -> quit;
}

sub deleteServerJob
{
	my $jobName = shift;
	my $ftpTmpPath = shift;
	
	unlink "$ftpTmpPath/$jobName.tgz";
	
	my $ftpHost = "172.20.218.191";
	
	my $ftp = Net::FTP -> new ( $ftpHost, Debug => 0, Timeout => 10, Passive => 1 ) or die "Cannot connect to ibm6: $! ";
	
	$ftp -> login("Incam","incam")  or die "Cannot login ", $ftp -> message;
	$ftp -> cwd("/data3/db_management/abnormal_jobs/") or die "Cannot change working directory ", $ftp -> message;
	
	$ftp -> delete("$jobName.tgz") or die "delete failed ", $ftp -> message;
	
	$ftp -> quit;	
	
	return 0;	
}

sub deleteMysqlLog
{
	my $delJob = shift;
	
	my $dbname = "incam_management";
	my $location = "192.168.2.19";
	my $port = "3306"; 
	my $database = "DBI:mysql:$dbname:$location:$port";
	my $db_user = "root";
	my $db_pass = "k06931!";
	my $dbh = DBI->connect($database,$db_user,$db_pass);
	my $sth;
	
	my $sql = "DELETE FROM abnormal_jobs WHERE Job = \'$delJob\'";
	
	$sth = $dbh->prepare($sql);
