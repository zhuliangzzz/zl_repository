sub run_import_tgz
{
	$importOption = shift;
	
	my @selectJobImp;
	foreach ($sel_job_lb->curselection())
	{	
		my $tmp_jobs = $sel_job_lb->get($_);
		push (@selectJobImp,$tmp_jobs);		
	}
	
	my $layer_no = scalar(@selectJobImp);
	if ( $layer_no == 0 ) {
		&run_message_no_sel;
		$button_frm->withdraw;
	}

	my $localPathJob = '/tmp';
	&ftpJob("$selectJobImp[0].tgz","$localPathJob");
	
	if ( $importOption == 1 )
	{
		my $rv = &checkJobExist($selectJobImp[0]);
		if ( $rv == 0 ) 
		{	$f->COM("import_open_job,db=db1,path=${localPathJob}/$selectJobImp[0].tgz,name=$selectJobImp[0],analyze_surfaces=no,keep_nls=no");
			$f->COM("open_job,job=$selectJobImp[0],open_win=yes");
			$f->COM("check_inout,job=$selectJobImp[0],mode=out,ent_type=job");
			&deleteServerJob($selectJobImp[0],$localPathJob);
			&deleteMysqlLog($selectJobImp[0]);
			$mw3_1->destroy;
			$f->PAUSE("Done.");
			exit 0;
		}
	} else {
		my $rv = &checkJobExist($selectJobImp[0]);
		if ( $rv == 0)
		{
			$f->COM("import_job,db=db1,path=${localPathJob}/$selectJobImp[0].tgz,name=$selectJobImp[0],keep_nls=no");
			&deleteServerJob($selectJobImp[0],$localPathJob);
			&deleteMysqlLog($selectJobImp[0]);
			$mw3_1->destroy;
			$f->PAUSE("Done.");
			exit 0;
		}
	}

}

